<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de <%= usuario.nombre %></title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/theme/css/style.css">
    <link rel="stylesheet" href="/assets/dropdown/css/style.css">
    <link rel="stylesheet" href="/assets/socicon/css/styles.css">
    <link rel="stylesheet" href="/assets/mobirise/css/mbr-additional.css">
    <script src="/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/theme/js/script.js"></script>
    
    
<style>
    .profile-container {
        display: flex !important;
        flex-direction: column !important;
        align-items: center !important;
        max-width: 800px !important;
        margin: 0 auto !important;
    }

    .description-section {
        text-align: center !important;
        margin-bottom: 20px !important;
        width: 100% !important;
    }

    .sections-container {
        display: flex !important;
        justify-content: space-between !important;
        width: 100% !important;
        align-items: stretch !important;
    }

    .profile-section {
        width: 48% !important;
        padding: 10px !important;
        box-sizing: border-box !important;
        border: 1px solid #ddd !important;
        border-radius: 8px !important;
        background-color: #f9f9f9 !important;
    }

    .profile-section button {
        padding: 10px !important;
        background-color: #0077b5 !important;
        color: white !important;
        border: none !important;
        cursor: pointer !important;
    }

    .profile-section button:hover {
        background-color: #005f8b !important;
    }
</style>

    </style>
</head>
<body>
    <%- include("../routes/header.ejs") %>
    <br>

    <section class="people07" id="people07-d">
        <div class="profile-container">
            <div class="img-wrapper mt-4">
                <strong>Perfil de <%= usuario.nombre %></strong>
                <img src="/imagen/<%= usuario.id %>" alt="Foto de perfil">
            </div>
            <div class="img-wrapper mt-4">
                <a href="/siguiendo">Siguiendo: <%= seguidos %></a>
                <a href="/seguidos" style="margin-left: 15px;"><span id="seguidos_<%= usuario.id %>">Seguidores: <%= seguidores %></span></a>
            </div>
            
            <div class="description-section">
                <p><b>Descripción:</b></p>
                <p><%= usuario.descripcion || 'Sin descripción' %></p>
            </div>

            <div class="sections-container">
                <div class="profile-section">
                    <p><b>Redes sociales</b></p>
                    <% if (usuario.twitter) { %>
                        <p><i class="fab fa-twitter"></i> <a href="https://twitter.com/<%= usuario.twitter %>" target="_blank">Twitter</a></p>
                    <% } %>
                    <% if (usuario.instagram) { %>
                        <p><i class="fab fa-instagram"></i> <a href="https://www.instagram.com/<%= usuario.instagram %>" target="_blank">Instagram</a></p>
                    <% } %>
                    <% if (usuario.linkedin) { %>
                        <p><i class="fab fa-linkedin-in"></i> <a href="https://www.linkedin.com/in/<%= usuario.linkedin %>" target="_blank">LinkedIn</a></p>
                    <% } %>
                    <% if (usuario.github) { %>
                        <p><i class="fab fa-github"></i> <a href="https://github.com/<%= usuario.github %>" target="_blank">GitHub</a></p>
                    <% } %>
                </div>

                <div class="profile-section">
                    <p><b>Información personal</b></p>
                    <p>Nombre: <%= usuario.nombre %></p>
                    <p>Apellido: <%= usuario.apellido %></p>
                    <p>Fecha de Nacimiento: <%= usuario.fecha_nacimiento.toISOString().slice(0,10) %></p>
                    <p>Teléfono: <%= usuario.telefono || 'No disponible' %></p>
                </div>
            </div>
        </div>
        <div class="follow-section">
            <button class="seguir" id="<%= usuario.id %>" name="<%= userId %>">
                <% if (seguido) { %>
                    <p>Dejar de seguir</p>
                <% } else { %>
                    <p>Seguir</p>
                <% } %>
            </button>

        </div>      
    </section>
    <script>
        //Script para manejar los me gusta con una petición post al servidor con la información del usuario y la publicación
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll('.seguir').forEach(button => {
            button.addEventListener('click', async () => {
                const id_seguido = button.id; // Usamos el ID del botón como ID de la publicación
                const id_usuario = button.name;
                console.log({ id_seguido, id_usuario });

                const response = await fetch('/seguir', {
                    method: 'POST',
                    credentials: 'include', //Esto envía cookies al servidor
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id_seguido, id_usuario})
                });
    
                const data = await response.json();
    
                if (response.ok) {
    // Actualizar el texto del botón
    button.innerHTML = data.text;
    
document.getElementById(`seguidos_${id_seguido}`).innerText = "Seguidores: " + data.seguidores;
} else {
    console.error('Error al procesar el follow:', data.error);
    // Mostrar un mensaje de error en la UI
    alert("Hubo un error al intentar seguir al usuario. Intenta nuevamente.");
}


            });
        });
    });
    
    </script>

    <script src="assets/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/smoothscroll/smooth-scroll.js"></script>
    <script src="assets/ytplayer/index.js"></script>
    <script src="assets/dropdown/js/navbar-dropdown.js"></script>
    <script src="assets/vimeoplayer/player.js"></script>
    <script src="assets/masonry/masonry.pkgd.min.js"></script>
    <script src="assets/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="assets/theme/js/script.js"></script>
    <script src="../routes/footer.js"></script>
</body>
</html>